<local:GUIWindow x:Class="FleuristeVirtuel_WPF.LoadingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FleuristeVirtuel_WPF"
        mc:Ignorable="d"
        AllowMaximize="False"
        Icon="resources/logo.ico"
        UseLayoutRounding="True"
        Style="{StaticResource GUIWindowStyles}"
        Title="FleuristeVirtuel" Height="75" Width="300">
    <StackPanel>
        <TextBlock TextAlignment="Center" Foreground="White" Margin="0,5,0,0">Chargement, merci de patienter...</TextBlock>
        <ProgressBar Height="14" Margin="20,10,20,5" IsIndeterminate="True"/>
    </StackPanel>
</local:GUIWindow>
